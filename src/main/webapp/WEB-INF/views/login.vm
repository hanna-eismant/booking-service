#parse('layouts/header.vm')

<form class="login-form col-xs-4" method="post">
  <h2>Login</h2>

  <input class="form-control form-group" id="username" name="username" placeholder="Username"/>
  <input class="form-control form-group" type="password" id="password" name="password" placeholder="Password"/>

  <div class="checkbox">
    <label>
      <input type="checkbox" id="remember" name="remember">
      Remember me
    </label>
  </div>

  <button class="btn btn-primary form-control form-group" type="submit">Log In</button>
</form>

#parse('layouts/footer.vm')
