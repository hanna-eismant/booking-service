<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd"
        >

    <context:component-scan base-package="com.epam.spring.core.*"/>

    <import resource="discount-config.xml"/>

    <util:list id="auditoriumList">
        <bean class="com.epam.spring.core.auditoriums.Auditorium">
            <constructor-arg value="${auditorium.one.name}"/>
            <constructor-arg value="${auditorium.one.seats}"/>
            <constructor-arg
                    value="#{'${auditorium.one.vipseats}'.split(',')}">
            </constructor-arg>
        </bean>
        <bean class="com.epam.spring.core.auditoriums.Auditorium">
            <constructor-arg value="${auditorium.two.name}"/>
            <constructor-arg value="${auditorium.two.seats}"/>
            <constructor-arg
                    value="#{'${auditorium.two.vipseats}'.split(',')}">
            </constructor-arg>
        </bean>
    </util:list>

    <bean id="auditoriumService" class="com.epam.spring.core.auditoriums.services.AuditoriumServiceImpl">
        <constructor-arg ref="auditoriumList"/>
    </bean>

    <bean id="configurationProperties"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:auditorium.one-test.properties</value>
                <value>classpath:auditorium.two-test.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        </property>
    </bean>

</beans>
